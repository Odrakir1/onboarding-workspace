<?xml version="1.0"?>
<!DOCTYPE resource-action-mapping PUBLIC "-//Liferay//DTD Resource Action Mapping 7.4.0//EN" "http://www.liferay.com/dtd/liferay-resource-action-mapping_7_4_0.dtd">

<resource-action-mapping>
    <model-resource>
        <model-name>com.acme.event.monitor.model.Event</model-name>
        <portlet-ref>
            <portlet-name>com_acme_event_monitor_web_EventMonitorPortlet</portlet-name>
        </portlet-ref>
        <root>true</root>
        <permissions>
            <supports>
                <action-key>VIEW</action-key>
                <action-key>VIEW_ALL</action-key>
            </supports>
            <site-member-defaults>
                <action-key>VIEW</action-key>
                <action-key>VIEW_ALL</action-key>
            </site-member-defaults>
            <guest-defaults>
                <action-key>VIEW</action-key>
            </guest-defaults>
            <guest-unsupported>
                <action-key>VIEW_ALL</action-key>
            </guest-unsupported>
        </permissions>
    </model-resource>
</resource-action-mapping>